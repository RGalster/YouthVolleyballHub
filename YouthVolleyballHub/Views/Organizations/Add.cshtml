@model YouthVolleyballHub.ViewModels.AddOrganizationViewModel;

<h1>Add Your Organization</h1>

<form asp-controller="Organizations" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactEmail">Contact Email</label>
        <input asp-for="ContactEmail" />
    </div>
    
    <input type="submit" value="Add Organization" />
</form>