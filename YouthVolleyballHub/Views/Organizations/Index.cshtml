@model List<YouthVolleyballHub.Models.Organization>

<h1>Youth Volleyball Organizations</h1>

@if (Model.Count == 0)
{
    <p>No organizations have been created yet</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Contact Email
            </th>
        </tr>
        @foreach (var org in Model)
        {
            <tr>
                @*<td><a asp-controller="Organizations" asp-action="Detail" asp-route-id="@org.Id">@org.Name</a></td>*@
                <td>@org.Name</td>
                <td>@org.Description</td>
                <td>@org.ContactEmail</td>
            </tr>
        }
    </table>
}
