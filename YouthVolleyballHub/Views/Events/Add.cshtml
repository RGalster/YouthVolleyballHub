@model YouthVolleyballHub.ViewModels.AddEventViewModel;

<h1>Add Event</h1>

<form asp-controller="Events" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactEmail">Contact Email</label>
        <input asp-for="ContactEmail" />
    </div>
    <div class="form-group">
        <label asp-for="OrganizationId">Organization</label>
        <select asp-for="OrganizationId" asp-items="Model.Organizations"></select>
    </div>
    <p>To add your organization<a style="display:inline" asp-area="Identity" asp-page="/Account/Register"> register a new account here</a></p>
    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" asp-items="Model.Categories"></select>
    </div>
    <p>Don't see the category you're looking for?</p>
    <p><a style="display:inline" asp-area="" asp-controller="EventCategory" asp-action="Create">click here to add a category</a></p>
    <input type="submit" value="Add Event" />
</form>