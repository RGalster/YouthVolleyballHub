@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Youth Volleyball Hub</h1>
    <p>A place to list and find Youth Volleyball organizations, events, resources and more!</p>
</div><br />


        @if (SignInManager.IsSignedIn(User))
{
    
        @*<a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>*@

        <p >Hello @User.Identity.Name!</p>
        
        <a class="form-inline" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> Manage Your Account Settings Here</a><br />

        <a class="form-inline" asp-controller="Organizations" asp-action="Add">Add Your Organization Here</a><br />

        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    
}
else
{
    
        <p><a style="display:inline" asp-area="Identity" asp-page="/Account/Register">Register here</a> to create a new account!</p>
    
        <p><a style="display:inline" asp-area="Identity" asp-page="/Account/Login">Login to your account</a> to post and edit events!</p>
    
}
   

